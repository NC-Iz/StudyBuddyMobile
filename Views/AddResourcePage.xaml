<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="StudyBuddyMobile.Views.AddResourcePage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Add Study Resource"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="25">

            <!-- Header -->
            <Frame BackgroundColor="#4f46e5"
                   CornerRadius="15"
                   Padding="20"
                   Margin="0,0,0,10">
                <VerticalStackLayout Spacing="8">
                    <Label Text="📚 Add New Resource"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center" />
                    <Label Text="Upload and organize your learning materials"
                           FontSize="14"
                           TextColor="White"
                           Opacity="0.9"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Frame>

            <!-- Resource Form -->
            <VerticalStackLayout Spacing="20">

                <!-- Title Input -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="📝 Resource Title"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#374151" />
                    <Entry x:Name="TitleEntry"
                           Placeholder="Enter a descriptive title"
                           FontSize="16"
                           BackgroundColor="#f9fafb"
                           TextColor="#111827" />
                </VerticalStackLayout>

                <!-- Subject Input -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="🎓 Subject"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#374151" />
                    <Entry x:Name="SubjectEntry"
                           Placeholder="e.g., Mathematics, Computer Science, Physics"
                           FontSize="16"
                           BackgroundColor="#f9fafb"
                           TextColor="#111827" />
                </VerticalStackLayout>

                <!-- Resource Type -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="📄 Resource Type"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#374151" />
                    <Picker x:Name="ResourceTypePicker"
                            Title="Select resource type"
                            FontSize="16"
                            BackgroundColor="#f9fafb"
                            TextColor="#111827">
                        <Picker.Items>
                            <x:String>PDF</x:String>
                            <x:String>Video</x:String>
                            <x:String>Document</x:String>
                        </Picker.Items>
                    </Picker>
                </VerticalStackLayout>

                <!-- Description -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="📋 Description"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#374151" />
                    <Editor x:Name="DescriptionEditor"
                            Placeholder="Describe what this resource contains and how it can help with learning..."
                            FontSize="16"
                            BackgroundColor="#f9fafb"
                            TextColor="#111827"
                            HeightRequest="100" />
                </VerticalStackLayout>

                <!-- File Selection -->
                <VerticalStackLayout Spacing="15">
                    <Label Text="📎 Select File"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#374151" />

                    <Frame BackgroundColor="#f0f9ff"
                           BorderColor="#4f46e5"
                           CornerRadius="10"
                           Padding="20"
                           HasShadow="False">
                        <VerticalStackLayout Spacing="15">

                            <Label x:Name="SelectedFileLabel"
                                   Text="No file selected"
                                   FontSize="14"
                                   TextColor="#6b7280"
                                   HorizontalOptions="Center" />

                            <Button x:Name="SelectFileButton"
                                    Text="📁 Choose File"
                                    FontSize="16"
                                    FontAttributes="Bold"
                                    BackgroundColor="#4f46e5"
                                    TextColor="White"
                                    CornerRadius="8"
                                    HeightRequest="45"
                                    Clicked="OnSelectFileClicked" />

                            <Label Text="Supported formats: PDF, MP4, AVI, MOV, DOC, DOCX"
                                   FontSize="12"
                                   TextColor="#6b7280"
                                   HorizontalOptions="Center" />

                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>

                <!-- Action Buttons -->
                <VerticalStackLayout Spacing="12" Margin="0,20,0,0">

                    <Button x:Name="SaveResourceButton"
                            Text="💾 Save Resource"
                            FontSize="18"
                            FontAttributes="Bold"
                            BackgroundColor="#10b981"
                            TextColor="White"
                            CornerRadius="10"
                            HeightRequest="50"
                            Clicked="OnSaveResourceClicked" />

                    <Button x:Name="CancelButton"
                            Text="Cancel"
                            FontSize="16"
                            FontAttributes="Bold"
                            BackgroundColor="#6b7280"
                            TextColor="White"
                            CornerRadius="10"
                            HeightRequest="45"
                            Clicked="OnCancelClicked" />

                </VerticalStackLayout>

                <!-- Loading Indicator -->
                <ActivityIndicator x:Name="LoadingIndicator"
                                 IsVisible="False"
                                 IsRunning="False"
                                 Color="#4f46e5"
                                 VerticalOptions="Center" />

            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>