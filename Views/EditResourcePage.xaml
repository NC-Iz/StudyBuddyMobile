<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="StudyBuddyMobile.Views.EditResourcePage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Edit Study Resource"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="25">

            <!-- Header -->
            <Frame BackgroundColor="#f59e0b"
                   CornerRadius="15"
                   Padding="20"
                   Margin="0,0,0,10">
                <VerticalStackLayout Spacing="8">
                    <Label Text="âœï¸ Edit Resource"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center" />
                    <Label Text="Update your resource information"
                           FontSize="14"
                           TextColor="White"
                           Opacity="0.9"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Frame>

            <!-- Current File Info -->
            <Frame BackgroundColor="#f0f9ff"
                   BorderColor="#4f46e5"
                   CornerRadius="10"
                   Padding="15"
                   HasShadow="False">
                <VerticalStackLayout Spacing="8">
                    <Label Text="ðŸ“Ž Current File"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#4f46e5" />
                    <Label x:Name="CurrentFileLabel"
                           Text="filename.pdf"
                           FontSize="14"
                           TextColor="#6b7280" />
                    <Label Text="Note: You can only edit title, description, and subject. To change the file, please delete and create a new resource."
                           FontSize="12"
                           TextColor="#6b7280"
                           FontAttributes="Italic" />
                </VerticalStackLayout>
            </Frame>

            <!-- Edit Form -->
            <VerticalStackLayout Spacing="20">

                <!-- Title Input -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="ðŸ“ Resource Title"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#374151" />
                    <Entry x:Name="TitleEntry"
                           FontSize="16"
                           BackgroundColor="#f9fafb"
                           TextColor="#111827" />
                </VerticalStackLayout>

                <!-- Subject Input -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="ðŸŽ“ Subject"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#374151" />
                    <Entry x:Name="SubjectEntry"
                           FontSize="16"
                           BackgroundColor="#f9fafb"
                           TextColor="#111827" />
                </VerticalStackLayout>

                <!-- Description -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="ðŸ“‹ Description"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#374151" />
                    <Editor x:Name="DescriptionEditor"
                            FontSize="16"
                            BackgroundColor="#f9fafb"
                            TextColor="#111827"
                            HeightRequest="100" />
                </VerticalStackLayout>

                <!-- Action Buttons -->
                <VerticalStackLayout Spacing="12" Margin="0,20,0,0">

                    <Button x:Name="UpdateResourceButton"
                            Text="ðŸ’¾ Update Resource"
                            FontSize="18"
                            FontAttributes="Bold"
                            BackgroundColor="#10b981"
                            TextColor="White"
                            CornerRadius="10"
                            HeightRequest="50"
                            Clicked="OnUpdateResourceClicked" />

                    <Button x:Name="CancelButton"
                            Text="Cancel"
                            FontSize="16"
                            FontAttributes="Bold"
                            BackgroundColor="#6b7280"
                            TextColor="White"
                            CornerRadius="10"
                            HeightRequest="45"
                            Clicked="OnCancelClicked" />

                </VerticalStackLayout>

                <!-- Loading Indicator -->
                <ActivityIndicator x:Name="LoadingIndicator"
                                 IsVisible="False"
                                 IsRunning="False"
                                 Color="#f59e0b"
                                 VerticalOptions="Center" />

            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>