<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="StudyBuddyMobile.Views.LoginPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Study Buddy - Login"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="Center">

            <!-- App Logo/Title -->
            <Label Text="ðŸ“š Study Buddy"
                   FontSize="36"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#4f46e5"
                   Margin="0,0,0,30" />

            <Label Text="Welcome Back!"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#1f2937" />

            <Label Text="Sign in to your account"
                   FontSize="16"
                   HorizontalOptions="Center"
                   TextColor="#6b7280"
                   Margin="0,0,0,30" />

            <!-- Email Input -->
            <Label Text="Email Address"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="#374151" />

            <Entry x:Name="EmailEntry"
                   Placeholder="Enter your email"
                   Keyboard="Email"
                   FontSize="16"
                   BackgroundColor="#f9fafb"
                   TextColor="#111827" />

            <!-- Password Input -->
            <Label Text="Password"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="#374151" />

            <Entry x:Name="PasswordEntry"
                   Placeholder="Enter your password"
                   IsPassword="True"
                   FontSize="16"
                   BackgroundColor="#f9fafb"
                   TextColor="#111827" />

            <!-- Login Button -->
            <Button x:Name="LoginButton"
                    Text="Sign In"
                    FontSize="18"
                    FontAttributes="Bold"
                    BackgroundColor="#4f46e5"
                    TextColor="White"
                    CornerRadius="8"
                    HeightRequest="50"
                    Margin="0,20,0,0"
                    Clicked="OnLoginClicked" />

            <!-- Loading Indicator -->
            <ActivityIndicator x:Name="LoadingIndicator"
                             IsVisible="False"
                             IsRunning="False"
                             Color="#4f46e5" />

            <!-- Register Link -->
            <StackLayout Orientation="Horizontal" 
                        HorizontalOptions="Center"
                        Margin="0,30,0,0">
                <Label Text="Don't have an account?"
                       FontSize="14"
                       TextColor="#6b7280" />
                <Label Text="Sign up here"
                       FontSize="14"
                       TextColor="#4f46e5"
                       FontAttributes="Bold">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnRegisterTapped" />
                    </Label.GestureRecognizers>
                </Label>
            </StackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>